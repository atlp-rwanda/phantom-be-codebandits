{
	"name": "phantom-be-codebandits",
	"version": "1.0.0",
	"type": "module",
	"description": "backend repository for phantom app",
	"main": "app.js",
	"scripts": {
		"test": "cross-env NODE_ENV=test c8 --check-coverage mocha src/**/tests/*.test.js --timeout 20000 --exit",
		"coverage": "cross-env NODE_ENV=test c8 --check-coverage -r lcov npm t",
		"prepare": "husky install",
		"start": "node src/app.js",
		"dev": "nodemon src/app.js",
		"lint": "eslint \"**/*.js\" --fix --max-warnings=0",
		"format": "prettier --write ./**/*.{js,jsx,json}",
		"lint-fix": "eslint \"**/*.js\" --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/atlp-rwanda/phantom-be-codebandits.git"
	},
	"author": "codebandits",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/atlp-rwanda/phantom-be-codebandits/issues"
	},
	"homepage": "https://github.com/atlp-rwanda/phantom-be-codebandits#readme",
	"devDependencies": {
		"chai": "^4.3.6",
		"coveralls": "^3.1.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.12.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.4",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"mocha": "^9.2.2",
		"nyc": "^15.1.0",
		"prettier": "2.6.1",
		"sinon": "^13.0.1",
		"typeorm-cli": "^1.0.7"
	},
	"lint-staged": {
		"*.js": "npm run lint",
		"*.{js,html,css,md}": "prettier --write  \"./**/*.{js,jsx,json}\""
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"accesscontrol": "^2.2.1",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.2",
		"c8": "^7.11.0",
		"chai-http": "^4.3.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-validator": "^6.14.0",
		"i18n": "^0.14.2",
		"jsonwebtoken": "^8.5.1",
		"nodemailer": "^6.7.3",
		"nodemon": "^2.0.15",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"swagger-jsdoc": "^6.1.0",
		"swagger-ui-express": "^4.3.0",
		"typeorm": "0.3.4",
		"uuid": "^8.3.2",
		"winston": "^3.6.0"
	}
}
